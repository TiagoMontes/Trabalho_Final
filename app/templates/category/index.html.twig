{% extends 'base.html.twig' %}

{% block title %}
    {{ title }}
{% endblock %}

{% block body %}
    <h1 class='mt-3'>{{ title }}</h1>
    <a href="{{ path('category_new') }}" class='btn btn-primary mt-4 mb-2'>Adicionar nova categoria</a>
    <div class="card-transparent mt-4">
        <table class='table table-dark table-striped align-middle mt-3'>
            <thead>
                <tr>
                    <th scope="col">#</th></td>
                    <th scope="col">Descrição</th></td>
                    <th scope="col">Ações</th></td>
                </tr>
            </thead>
            <tbody>
                    {% for category in categories %}
                    <tr>
                        <td>{{ category.id }}</td>
                        <td><span>{{ category.categoryName }}</span></td>
                        <td>
                        <a href='{{ path("category_update", {id: category.id}) }}' class='btn btn-primary'>Editar</a>
                        <a href='{{ path("category_delete", {id: category.id}) }}' class='btn btn-danger' name='id'>Excluir</a>
                        </td>
                    </tr>
                    {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
